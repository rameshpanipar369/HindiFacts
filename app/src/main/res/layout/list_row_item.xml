<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_5ssp"
    android:layout_marginHorizontal="@dimen/_5ssp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_10ssp"
        app:cardElevation="@dimen/_10ssp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48ssp"
            android:background="@drawable/blue_rectangle_bg"
            android:padding="@dimen/_10ssp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivCategoryImage"
                android:layout_width="@dimen/_38ssp"
                android:layout_height="@dimen/_38ssp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2ssp" />

            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15ssp"
                android:layout_toLeftOf="@+id/ivForward"
                android:layout_toRightOf="@+id/ivCategoryImage"
                android:gravity="center_vertical"
                android:text="Item Name"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <ImageView
                android:id="@+id/ivForward"
                android:layout_width="@dimen/_22ssp"
                android:layout_height="@dimen/_22ssp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5ssp"
                android:src="@drawable/ic_forward" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>